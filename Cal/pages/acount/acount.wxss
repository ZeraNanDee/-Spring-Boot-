/* pages/acount/acount.wxss */
.body{
  background-color: #f3efef;
  height: 100%;
  width: 100%; 
}
.userinfo {
  color:#FFFAFA;
  align-items: center;
  font-size: 16px;
  display: flex;
  flex-direction: row-reverse;
  margin-bottom: 7rpx;
  background-color: #197e4e;
}

.flush{
  display: flex;
  flex-direction: column;
}

.update {
  background-color:#FF7F24;
  font-size: 10px;
  color: white;
  margin-top: 3px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 10rpx;
  border-radius: 50%;
  display: inline-flex;
  position: relative;
  background-size: cover;
  background-position: center;
}

.useroutfo{
  background-color: white;
  display: flex;
  align-items: center;
  flex-direction: row;
  margin-bottom: 3px;
  border-bottom: 1px solid #9b9898;
}

.useroutfo-image {
  margin: 5px;
  padding: 3px;
  width: 100rpx;
  height: 100rpx;
}

.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 200rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}